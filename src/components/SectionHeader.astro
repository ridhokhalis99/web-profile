---
export interface Props {
  index: number;
  title: string;
}

const { index, title } = Astro.props;
---

<div class="container">
  <span>0{index}.</span>
  <h1>{title}</h1>
  <div class="line"></div>
</div>

<style lang="scss">
  .container {
    display: flex;
    margin-bottom: 40px;
    align-items: center;
    flex-wrap: nowrap;

    span {
      color: var(--primary-color);
      font-family: var(--mono);
      font-size: 28px;
    }

    h1 {
      font-size: 32px;
      color: var(--lightest-slate);
      white-space: nowrap;

      @media screen and (max-width: 480px) {
        font-size: 24px;
      }
    }

    .line {
      margin-left: 24px;
      height: 1px;
      width: 100%;
      background-color: var(--slate);
      flex-basis: auto;
    }
  }
</style>
