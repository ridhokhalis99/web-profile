<button id="nav-icon">
  <span class="line-nav-icon"></span>
  <span class="line-nav-icon"></span>
  <span class="line-nav-icon"></span>
  <span class="line-nav-icon"></span>
</button>

<style lang="scss">
  #nav-icon {
    width: 32px;
    height: 36px;
    position: relative;
    z-index: 10;
    margin: auto 0;
    margin-left: auto;
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
    -webkit-transition: 0.25s ease-in-out;
    -moz-transition: 0.25s ease-in-out;
    -o-transition: 0.25s ease-in-out;
    transition: 0.25s ease-in-out;
    cursor: pointer;
    background: transparent;
    border: none;
    display: none;

    @media screen and (max-width: 1024px) {
      display: flex;
    }
  }

  #nav-icon:active {
    background-color: none;
  }

  #nav-icon span {
    display: block;
    position: absolute;
    height: 4px;
    width: 100%;
    background: var(--primary-color);
    border-radius: 8px;
    opacity: 1;
    right: 0;
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
    -webkit-transition: 0.25s ease-in-out;
    -moz-transition: 0.25s ease-in-out;
    -o-transition: 0.25s ease-in-out;
    transition: 0.25s ease-in-out;
  }

  #nav-icon span {
    right: 0px;
  }

  #nav-icon span:nth-child(1) {
    top: 0px;
  }

  #nav-icon span:nth-child(2) {
    width: 70%;
  }

  #nav-icon span:nth-child(3) {
    width: 70%;
  }

  #nav-icon span:nth-child(4) {
    width: 40%;
    margin-right: auto;
  }

  #nav-icon.open span {
    width: 100%;
  }

  #nav-icon span:nth-child(2),
  #nav-icon span:nth-child(3) {
    top: 10px;
  }

  #nav-icon span:nth-child(4) {
    top: 20px;
  }

  #nav-icon.open span:nth-child(1) {
    top: 14px;
    width: 0%;
    right: 50%;
  }

  #nav-icon.open span:nth-child(2) {
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    transform: rotate(45deg);
  }

  #nav-icon.open span:nth-child(3) {
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);
  }

  #nav-icon.open span:nth-child(4) {
    top: 18px;
    width: 0%;
    right: 50%;
  }
</style>

<script>
  const navIcon = document.querySelector("#nav-icon") as HTMLButtonElement;
  const lineNavIcon = document.querySelectorAll(".line-nav-icon");
  const lineNavIcons = [...lineNavIcon];
  const navLinkContainer = document.querySelector(
    ".navlink-container"
  ) as HTMLDivElement;
  const main = document.querySelector("main") as HTMLDivElement;
  const body = document.querySelector("body") as HTMLBodyElement;

  navIcon.addEventListener("click", () => {
    navIcon.classList.toggle("open");
    navLinkContainer.classList.toggle("open");
    main.classList.toggle("open");
    body.classList.toggle("open");
  });

  window.addEventListener("resize", () => {
    if (window.innerWidth > 1024) {
      navIcon.classList.remove("open");
      navLinkContainer.classList.remove("open");
      main.classList.remove("open");
      body.classList.remove("open");
    }
  });

  body.addEventListener("click", (e) => {
    if (
      e.target !== navIcon &&
      e.target !== navLinkContainer &&
      !lineNavIcons.includes(e.target as HTMLSpanElement)
    ) {
      navIcon.classList.remove("open");
      navLinkContainer.classList.remove("open");
      main.classList.remove("open");
      body.classList.remove("open");
    }
  });
</script>
